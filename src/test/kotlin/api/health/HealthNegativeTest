package api.health

import io.restassured.RestAssured
import org.junit.jupiter.api.Test

class HealthNegativeTest {

    @Test
    fun `deve retornar 404 para endpoint inexistente`() {
        RestAssured
            .given()
            .`when`()
            .get("/healthx")
            .then()
            .statusCode(404)
    }

    @Test
    fun `deve retornar erro ao usar metodo POST no health`() {
        RestAssured
            .given()
            .`when`()
            .post("/health")
            .then()
            .statusCode(404)
    }
}
